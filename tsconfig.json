{
    "compilerOptions": {
        "typeRoots": [
            //"node_modules",
            "node_modules/@types",
        ],
        "module": "es2015",
        "target": "es2017",
        "outDir": "dist",
        "allowJs": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": false,
        "moduleResolution": "node",
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "eosjs": ["node_modules/eosjs/dist/index.d.ts"]
        }
    },
    "include": [
        "src/**/*",
        "src/**/*.ts",
        "src/fonts/*",
        "node_modules/eosjs/**/*.d.ts",
        "node_modules/@types", 
        "src/client/customUtils.ts",
        //"src/client/utils/customUtils.d.ts"    
]
}